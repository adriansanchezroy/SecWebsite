<!DOCTYPE html>

<html lang="en">
<head>
  <title>Utilisateurs</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="css/styles.css">

</head>

<body>

  <%- include('header') %>
  
<br>
<div class="container-lg mt-3">
  <header>
  <h1>Utilisateurs</h1>
  </header>
  <main>
  <form action="/addUser" method="POST">
    <button type="submit">Créer Utilisateurs</button>
  </form>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Identifiant</th>
        <th>Utilisateur</th>
        <th>Rôles</th>
        <th>Bloqué</th>
        <th>Mot de passe modifié</th>
        <th>Dernière connexion</th>
        <th>Login attempts</th>
        <th>Actions</th>
      </tr>
    </thead>
    <br>

    <tbody>
      <% users.forEach((user) => { %>
        <tr>
          <td><%= user._id %></td>
          <td><%= user.username %></td>
          <td>
            <% user.roles.forEach((role) => { %>
              <%= user.roles %><br>
            <% }) %>
          </td>
          <td><%= user.blocked %></td>
          <td><%= user.passModified %></td>
          <td><%= user.lastLoginDate %></td>
          <td>Good: <%= user.goodConnexions %> Bad: <%= user.badConnexions %></td>
          <td>
            <div class="dropdown">
              <button class="dropbtn">Actions</button>
              <div class="dropdown-content">
                <a href="#">Ajouter rôle admin</a>
                <a href="#">Ajouter rôle résidentiel</a>
                <a href="#">Ajouter rôle affaire</a>
                <a href="#">Réinitialiser mot de passe</a>
              </div>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
</div>
<%- include('footer') %> <!-- Inclure le footer -->
</body>
</html>