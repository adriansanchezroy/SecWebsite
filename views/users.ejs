<!DOCTYPE html>

<html lang="en">
<head>
  <title>Utilisateurs</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>
  <%- include('link') %>
  <%- include('header') %>

<br>
<div class="container-lg mt-3">
  <header>
  <h1>Utilisateurs</h1>
  </header>
  <main>
  <form action="/addUser" method="POST">
    <button type="submit">Créer Utilisateurs</button>
  </form>
  <!-- Add User Modal -->
<div id="addUserModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <form id="addUserForm">
      <h2>Add User</h2>
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required><br>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required><br>
      <label for="confirmPassword">Confirm Password:</label>
      <input type="password" id="confirmPassword" name="confirmPassword" required><br>
      <label for="role">Role:</label>
      <select id="role" name="role" required>
        <option value="admin">Admin</option>
        <option value="residential">Residential</option>
        <option value="business">Business</option>
      </select><br>
      <button type="submit">Create User</button>
    </form>
  </div>
</div>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Identifiant</th>
        <th>Utilisateur</th>
        <th>Rôles</th>
        <th>Bloqué</th>
        <th>Mot de passe modifié</th>
        <th>Dernière connexion</th>
        <th>Login attempts</th>
        <th>Actions</th>
      </tr>
    </thead>
    <br>

    <tbody>
      <% users.forEach((user) => { %>
        <tr>
          <td><%= user._id %></td>
          <td><%= user.username %></td>
          <td>
            <% user.roles.forEach((role) => { %>
              <%= user.roles %><br>
            <% }) %>
          </td>
          <td><%= user.blocked %></td>
          <td><%= user.passModified %></td>
          <td><%= user.lastLoginDate %></td>
          <td>Good: <%= user.goodConnexions %> Bad: <%= user.badConnexions %></td>
          <td>
            <div class="btn-group">
              <button class="dropbtn dropdown-toggle" data-toggle="dropdown">Actions</button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Ajouter rôle admin</a>
                <a class="dropdown-item" href="#">Ajouter rôle résidentiel</a>
                <a class="dropdown-item" href="#">Ajouter rôle affaire</a>
                <a class="dropdown-item" href="#">Réinitialiser mot de passe</a>
              </div>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
</div>
<%- include('footer') %> <!-- Inclure le footer -->
</body>
</html>